<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../partials/head") %>
  </head>
  <body>
    <%- include("../partials/header") %>
    <div>
      <% if (message) { %>
        <p><%= message %></p>
      <% } %>
      <p>Owner: <%= owner %>, ID: <%= id %></p>
      <p><%= date %></p>
    </div>
    <br />
    <div class="post-container">
      <form>
        <input type="text" id="title" name="title" placeholder="No title" <%=
        !title ? "" : "value="+title %> readonly />
        <textarea name="content" id="content" readonly><%= content %></textarea>
      </form>
    </div>
    <%- include("../partials/footer") %>
  </body>
</html>
